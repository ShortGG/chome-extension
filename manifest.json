{
  "manifest_version": 2,

  "name": "Short.gg",
  "description": "An open-source URL Shortener",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],

   "content_security_policy": "script-src 'self' https://short.gg; object-src 'self'"
}
